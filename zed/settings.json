{
  "icon_theme": "Material Icon Theme",
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "active_pane_modifiers": {
    "inactive_opacity": 0.9
  },
  "autosave": "off",
  "base_keymap": "VSCode",
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_fallbacks": ["JetBrains Mono", "D2Coding"],
  "buffer_font_size": 14,
  "confirm_quit": false,
  "tabs": {
    "git_status": true,
    "close_position": "right",
    "file_icons": true,
    "activate_on_close": "history"
  },
  "format_on_save": "on",
  "formatter": "auto",
  "always_treat_brackets_as_autoclosed": true,
  "indent_guides": {
    "show": "always",
    "coloring": "indent_aware",
    "background_coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true
  },
  "project_panel": {
    "indent_size": 15
  },
  "soft_wrap": "editor_width",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "font_fallbacks": ["Hack Nerd Font", "D2CodingLigature Nerd Font"],
    "font_features": {
      "calt": false
    },
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "theme": {
    "mode": "dark",
    "light": "Ayu Light",
    "dark": "Ayu Mirage"
  },
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "languages": {
    "CSS": {
      "tab_size": 2
    },
    "SCSS": {
      "tab_size": 2
    },
    "JavaScript": {
      "prettier": {
        "allowed": false
      },
      "formatter": [
        {
          "language_server": { "name": "vtsls" }
        },
        {
          "code_actions": {
            "source.fixAll.eslint": true
          }
        }
      ],
      "tab_size": 2
    },
    "TSX": {
      "prettier": {
        "allowed": false
      },
      "formatter": [
        {
          "code_actions": {
            "source.fixAll.eslint": true
          }
        }
      ],
      "tab_size": 2
    },
    "TypeScript": {
      "prettier": {
        "allowed": false
      },
      "formatter": [
        {
          "language_server": { "name": "vtsls" }
        },
        {
          "code_actions": {
            "source.fixAll.eslint": true
          }
        }
      ],
      "tab_size": 2
    },
    "Markdown": {
      "format_on_save": "on",
      "use_on_type_format": false,
      "prettier": {
        "allowed": true
      },
      "remove_trailing_whitespace_on_save": true
    },
    "Python": {
      "language_servers": ["pyright", "ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "basic"
        }
        // "python": {
        //   "pythonPath": ".venv/bin/python"
        // }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        },
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        "checkOnSave": true
      }
    },
    "vtsls": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        },
        // For TypeScript:
        "typescript": {
          "inlayHints": {
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "enumMemberValues": {
              "enabled": true
            }
          }
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "keyOrdering": false,
          "format": {
            "singleQuote": true
          },
          "schemas": {
            "http://json.schemastore.org/composer": ["/*"],
            "../relative/path/schema.json": ["/config*.yaml"]
          }
        }
      }
    }
  },
  "vim_mode": true
}
