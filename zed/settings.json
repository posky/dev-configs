{
  "active_pane_modifiers": {
    "border_size": 0,
    "inactive_opacity": 0.75
  },
  "agent": {
    "default_model": {
      "model": "claude-sonnet-4-thinking",
      "provider": "zed.dev"
    }
  },
  "always_treat_brackets_as_autoclosed": true,
  "auto_signature_help": true,
  "autosave": "off",
  "base_keymap": "VSCode",
  "buffer_font_fallbacks": ["JetBrains Mono", "D2Coding"],
  "buffer_font_family": "Fira Code",
  "buffer_font_features": {
    "calt": true
  },
  "buffer_font_size": 13,
  "calls": {
    "mute_on_join": true,
    "share_on_join": false
  },
  "completions": {
    "lsp": true,
    "lsp_fetch_timeout_ms": 250,
    "lsp_insert_mode": "replace_suffix",
    "words": "fallback",
    "words_min_length": 2
  },
  "confirm_quit": false,
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "padding": 4
    },
    "lsp_pull_diagnostics": {
      "enabled": true
    }
  },
  "enable_language_server": true,
  "ensure_final_newline_on_save": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "format_on_save": "on",
  "formatter": "auto",
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 120,
    "inline_blame": {
      "delay_ms": 400,
      "enabled": true,
      "min_column": 120,
      "padding": 10,
      "show_commit_summary": true
    }
  },
  "git_panel": {
    "button": true,
    "collapse_untracked_diff": false,
    "dock": "left",
    "scrollbar": {
      "show": "auto"
    },
    "sort_by_path": true,
    "status_style": "icon"
  },
  "go_to_definition_fallback": "find_all_references",
  "hard_tabs": false,
  "hover_popover_enabled": true,
  "icon_theme": "Zed (Default)",
  "indent_guides": {
    "background_coloring": "indent_aware",
    "coloring": "indent_aware",
    "enabled": true
  },
  "inlay_hints": {
    "edit_debounce_ms": 700,
    "enabled": true,
    "scroll_debounce_ms": 50,
    "show_background": false,
    "show_other_hints": true,
    "show_parameter_hints": true,
    "show_type_hints": true
  },
  "journal": {
    "hour_format": "hour24"
  },
  "jsx_tag_auto_close": {
    "enabled": true
  },
  "languages": {
    "CSS": {
      "tab_size": 2
    },
    "HTML": {
      "tab_size": 2
    },
    "JavaScript": {
      "formatter": [
        {
          "language_server": {
            "name": "vtsls"
          }
        },
        {
          "code_action": "source.fixAll.eslint"
        }
      ],
      "prettier": {
        "allowed": false
      },
      "tab_size": 2
    },
    "Markdown": {
      "format_on_save": "on",
      "remove_trailing_whitespace_on_save": true,
      "use_on_type_format": false
    },
    "Prisma": {
      "use_on_type_format": false
    },
    "Python": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.fixAll.ruff"
        },
        {
          "code_action": "source.organizeImports.ruff"
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ],
      "language_servers": ["basedpyright", "ruff"]
    },
    "SCSS": {
      "tab_size": 2
    },
    "Shell Script": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "arguments": ["--filename", "{buffer_path}", "--indent", "2"],
          "command": "shfmt"
        }
      },
      "tab_size": 2
    },
    "TOML": {
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "taplo"
          }
        }
      ],
      "tab_size": 2
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "prettier": {
        "allowed": false
      },
      "tab_size": 2
    },
    "TypeScript": {
      "formatter": [
        {
          "language_server": {
            "name": "biome"
          }
        },
        {
          "language_server": {
            "name": "vtsls"
          }
        },
        {
          "code_action": "source.fixAll.biome"
        },
        {
          "code_action": "source.organizeImport.biome"
        },
        {
          "code_action": "source.fixAll.eslint"
        }
      ],
      "prettier": {
        "allowed": false
      },
      "tab_size": 2
    },
    "YAML": {
      "formatter": "language_server",
      "tab_size": 2
    }
  },
  "lsp": {
    "basedpyright": {
      "settings": {
        "basedpyright": {
          "analysis": {
            "autoFormatStrings": true,
            "autoImportCompletions": true,
            "autoSearchPaths": false,
            "diagnosticMode": "workspace",
            "exclude": [".venv", "**/__pycache__"],
            "fileEnumerationTimeout": 20,
            "inlayHints": {
              "callArgumentNames": true,
              "callArgumentNamesMatching": false,
              "functionReturnTypes": true,
              "genericTypes": true,
              "variableTypes": true
            },
            "logLevel": "Information",
            "typeCheckingMode": "basic",
            "useLibraryCodeForTypes": true,
            "useTypingExtensions": false
          },
          "disableLanguageServices": false,
          "disableOrganizeImports": true,
          "disableTaggedHints": false
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    },
    "eslint": {
      "settings": {
        "workingDirectory": {
          "mode": "auto"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          // Ruff server settings goes here
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "assist": {
          "emitMustUse": true,
          "preferSelf": true
        },
        "check": {
          "command": "clippy"
        },
        "checkOnSave": true,
        "completion": {
          "fullFunctionSignatures": {
            "enable": true
          },
          "hideDeprecated": true
        },
        "diagnostics": {
          "experimental": {
            "enable": true
          }
        },
        "inlayHints": {
          "closingBraceHints": {
            "minLines": 12
          },
          "closureReturnTypeHints": {
            "enable": "with_block"
          },
          "discriminantHints": {
            "enable": "fieldless"
          },
          "expressionAdjustmentHints": {
            "enable": "always"
          },
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "rangeExclusiveHints": {
            "enable": true
          }
        },
        "rustfmt": {
          "overrideCommand": ["rustup", "run", "nightly", "rustfmt"]
        },
        "workspace.symbol.search": {
          "excludeImports": true,
          "limit": 256
        }
      }
    },
    "taplo": {
      "settings": {
        "align_comments": true,
        "align_entries": false,
        "allowed_blank_lines": 2,
        "array_auto_collapse": true,
        "array_auto_expand": true,
        "array_trailing_comma": true,
        "column_width": 80,
        "compact_arrays": false,
        "compact_entries": false,
        "compact_inline_tables": false,
        "crlf": false,
        "indent_entries": false,
        "indent_string": "  ",
        "indent_tables": false,
        "inline_table_expand": true,
        "reorder_arrays": false,
        "reorder_inline_tables": false,
        "reorder_keys": false,
        "trailing_newline": true
      }
    },
    "vtsls": {
      "settings": {
        // For JavaScript:
        "javascript": {
          "inlayHints": {
            "enumMemberValues": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            }
          }
        },
        // For TypeScript:
        "typescript": {
          "inlayHints": {
            "enumMemberValues": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            },
            "parameterNames": {
              "enabled": "all",
              "suppressWhenArgumentMatchesName": false
            },
            "parameterTypes": {
              "enabled": true
            },
            "propertyDeclarationTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true,
              "suppressWhenTypeMatchesName": true
            }
          }
        }
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "completion": true,
          "disableDefaultProperties": true,
          "format": {
            "enable": true,
            "printWidth": 100,
            "proseWrap": "preserve",
            "singleQuote": true
          },
          "hover": true,
          "keyOrdering": false,
          "schemaStore": {
            "enable": true
          },
          "style": {
            "flowMapping": "forbid",
            "flowSequence": "forbid"
          },
          "validate": true
        }
      }
    }
  },
  "minimap": {
    "show": "auto",
    "thumb": "always"
  },
  "outline_panel": {
    "auto_reveal_entries": true,
    "button": true,
    "dock": "left",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "always"
    },
    "scrollbar": {
      "show": "auto"
    }
  },
  "preview_tabs": {
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true,
    "enabled": true
  },
  "project_panel": {
    "auto_fold_dirs": true,
    "auto_reveal_entries": true,
    "button": true,
    "dock": "left",
    "drag_and_drop": true,
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "hide_gitignore": false,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 18,
    "scrollbar": {
      "show": "auto"
    },
    "show_diagnostics": "all",
    "sticky_scroll": true
  },
  "remove_trailing_whitespace_on_save": true,
  "search": {
    "case_sensitive": false,
    "include_ignored": false,
    "regex": true,
    "whole_word": false
  },
  "show_completion_documentation": true,
  "show_completions_on_input": true,
  "show_edit_predictions": true,
  "show_signature_help_after_edits": true,
  "soft_wrap": "none",
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": true
  },
  "tabs": {
    "activate_on_close": "history",
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "dock": "bottom",
    "font_fallbacks": ["JetBrainsMono Nerd Font", "D2CodingLigature Nerd Font"],
    "font_family": "FiraCode Nerd Font Mono",
    "font_features": {
      "calt": false
    },
    "font_size": 12,
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "theme": {
    "dark": "Tokyo Night",
    "light": "Tokyo Night Light",
    "mode": "dark"
  },
  "title_bar": {
    "show_branch_icon": true,
    "show_branch_name": true,
    "show_menus": true,
    "show_onboarding_banner": true,
    "show_project_items": true,
    "show_sign_in": true,
    "show_user_picture": true
  },
  "toolbar": {
    "agent_review": true,
    "breadcrumbs": true,
    "code_actions": false,
    "quick_actions": true,
    "selections_menu": true
  },
  "use_auto_surround": true,
  "vim_mode": true
}
